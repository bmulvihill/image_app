<div class="row">
  <% @photos.each do |photo| %>
    <div class="col-xs-6 col-md-3">
      <div class="thumbnail">
      <a href='#'><%= image_tag photo.img.url %></a>
      Description: <%= photo.description %><br />
      Tags: <% photo.tags.each do |tag| %>
        <%=link_to '#' << tag, tags_photos_path({tag: tag}) %></a>
      <% end %><br />
      <div class='add_comment' data='photos/<%= photo.id %>'>
        Add Comment
      </div>
      <div class='close_comment'>
        Close
      </div>
      <div class='comment'>
      </div>
      <div class='container-fluid'>
        <% photo.comments.each do |comment| %>
          <div class='row'>
            <%= comment.text %> by <%= comment.user.name %>
          </div>
        <% end %>
      </div>
      </div>
    </div>
  <% end %>
</div>