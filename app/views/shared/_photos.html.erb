<div class="row">
  <% @photos.each do |photo| %>
    <div class="col-xs-6 col-md-3">
      <div class="thumbnail">
      <%=link_to image_tag(photo.img.url), photo_path(photo) %></a>
      Description: <%= photo.description %><br />
      Tags: <% photo.tags.each do |tag| %>
        <%=link_to '#' << tag, tags_photos_path({tag: tag}) %></a>
      <% end %><br />
      Thumbs Up: <%= photo.thumbs_up %><br />
      <div class='add_thumbs_up' data='<%= photo.id %>'>
        <%=link_to 'Add Thumbs Up', photo_thumbs_up_path(photo) %>
      </div>
      <div class='add_comment' data='<%= photo_path(photo) %>'>
        Add Comment
      </div>
      <div class='close_comment'>
        Close
      </div>
      <div class='comment'>
      </div>
      <div class='container-fluid'>
        <% photo.comments.each do |comment| %>
          <div class='row'>
            <%= comment.text %> by <%= comment.user.name %>
          </div>
        <% end %>
      </div>
      </div>
    </div>
  <% end %>
</div>