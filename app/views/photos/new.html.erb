<%= form_for @image, :url => photos_path, :html => { :multipart => true } do |f| %>
  <p><%= f.label :img%><br />
  <%= f.file_field :img %>
  <p><%= f.label :description %>: Enter a description of your photo, tags can be added using the #tag format<br />
  <%= f.text_field :description %></p>
  <p><%= f.label :tags_list %>: Add additional tags seperated by a comma<br />
  <%= f.text_field :tags_list %></p>
  <div><%= f.submit "Submit" %></div>
<% end %>